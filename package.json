{
  // Project metadata
  "name": "CollateralVault",
  "version": "1.0.0",
  "description": "A TypeScript implementation of CollateralVault",
  "main": "dist/index.js",
  "author": "mpermar082",
  "license": "MIT",

  // Scripts for project execution
  "scripts": {
    // Build the project using TypeScript compiler
    "build": "tsc",
    // Start the project using Node.js
    "start": "node dist/index.js",
    // Run the project in development mode
    "dev": "ts-node src/index.ts",
    // Run unit tests using Jest
    "test": "jest",
    // Clean the project by removing the 'dist' directory
    "clean": "rm -rf dist"
  },

  // Project dependencies
  "dependencies": {
    // CLI parser library
    "minimist": "^1.2.0"
  },

  // Development dependencies
  "devDependencies": {
    // TypeScript compiler
    "typescript": "^5.0.0",
    // TypeScript definitions for Node.js
    "@types/node": "^18.0.0",
    // TypeScript definitions for minimist
    "@types/minimist": "^1.2.0",
    // TypeScript execution environment for Node.js
    "ts-node": "^10.0.0",
    // Unit testing framework
    "jest": "^29.0.0",
    // TypeScript definitions for Jest
    "@types/jest": "^29.0.0"
  }
}