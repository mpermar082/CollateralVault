{
  // Project metadata
  "name": "collateralvault",
  "version": "1.0.0",
  "description": "CollateralVault - A TypeScript implementation",
  "main": "dist/index.js",
  "author": "mpermar082",
  "license": "MIT",

  // Scripts for project execution
  "scripts": {
    // Build the project using TypeScript compiler
    "build": "tsc",
    // Start the project using Node.js
    "start": "node dist/index.js",
    // Run the project in development mode
    "dev": "ts-node src/index.ts",
    // Run unit tests using Jest
    "test": "jest",
    // Clean the project by removing the 'dist' directory
    "clean": "rm -rf dist"
  },

  // Project dependencies
  "dependencies": {
    "minimist": "^1.2.0" // CLI parser library
  },

  // Development dependencies
  "devDependencies": {
    "typescript": "^5.0.0", // TypeScript compiler
    "@types/node": "^18.0.0", // TypeScript definitions for Node.js
    "@types/minimist": "^1.2.0", // TypeScript definitions for minimist
    "ts-node": "^10.0.0", // TypeScript execution environment for Node.js
    "jest": "^29.0.0", // Unit testing framework
    "@types/jest": "^29.0.0" // TypeScript definitions for Jest
  }
}